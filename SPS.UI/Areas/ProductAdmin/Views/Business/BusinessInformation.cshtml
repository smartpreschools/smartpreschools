
@{
    ViewData["Title"] = "BusinessInformation";
    Layout = "~/Areas/ProductAdmin/Views/Shared/_ProductOwner.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Add Business Data</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>School Name : <em class="text-danger">*</em> </label>
                                    <input type="text" class="form-control" id="txtSchoolName" placeholder="School Name" msg-value="school name" required>
                                    <span id="errtxtSchoolName" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Address : <em class="text-danger">*</em> </label>
                                    <input type="text" class="form-control" id="txtSchoolAddress" placeholder="School Address" msg-value="school address" required>
                                    <span id="errtxtSchoolAddress" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Contact : <em class="text-danger">*</em> </label>
                                    <input type="text" class="form-control" id="txtContactNumber" placeholder="Contact Number" msg-value="contact number" required>
                                    <span id="errtxtContactNumber" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Country :  <em class="text-danger">*</em> </label>
                                    <select id="ddlCountry" class="form-control" required>
                                        <option value="">Select</option>
                                    </select>
                                    <span id="errddlCountry" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>State :  <em class="text-danger">*</em> </label>
                                    <select id="ddlState" class="form-control" required>
                                        <option value="">Select</option>
                                    </select>
                                    <span id="errddlState" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>District :  <em class="text-danger">*</em> </label>
                                    <select id="ddlDistrict" class="form-control" required>
                                        <option value="">Select</option>
                                    </select>
                                    <span id="errddlDistrict" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Taluka :  <em class="text-danger">*</em> </label>
                                    <select id="ddlTaluka" class="form-control" required>
                                        <option value="">Select</option>
                                    </select>
                                    <span id="errddlTaluka" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>City/Village :  <em class="text-danger">*</em> </label>
                                    <select id="ddlCity" class="form-control" required>
                                        <option value="">Select</option>
                                    </select>
                                    <span id="errddlCity" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Is Website Present :  <em class="text-danger">*</em> </label>
                                    <label class="container">
                                        Yes
                                        <input type="radio" checked="checked" name="radio">
                                        <span class="checkmark"></span>
                                    </label>
                                    <label class="container">
                                        No
                                        <input type="radio" name="radio">
                                        <span class="checkmark"></span>
                                    </label>
                                    <span id="errtxtIsWebsitePresent" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Justdial Rating :  </label>
                                    <input type="text" class="form-control" id="txtJustDialRating" placeholder="Please Enter Justdial Rating" msg-value="justdial rating" required>
                                    <span id="errtxtJustDialRating" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Status :  <em class="text-danger">*</em> </label>
                                    <select id="ddlStatus" class="form-control" required>
                                        <option value="">Select</option>
                                        <option value="active">Active</option>
                                        <option value="inactive">Inactive</option>
                                    </select>
                                    <span id="errddlStatus" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Short Description :  </label>
                                    <textarea placeholder="Description" class="form-control" id="txtShortDescription" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-info" id="btnSubmit">Submit</button>
                        <button type="button" class="btn btn-secondary" id="btnClear">Clear</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

