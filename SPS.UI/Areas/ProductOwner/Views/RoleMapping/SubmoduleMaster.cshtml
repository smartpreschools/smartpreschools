
@{
    ViewData["Title"] = "SubmoduleMaster";
    Layout = "~/Areas/ProductOwner/Views/Shared/_ProductOwner.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Submodule Master</h3>
                    </div>
                    <div class="card-body">                        
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Module :  <em class="text-danger">*</em> </label>
                                    <select id="ddlModule" class="form-control" required>
                                        <option value="">Select</option>
                                        <option value="active">Active</option>
                                        <option value="inactive">Inactive</option>
                                    </select>
                                    <span id="errddlModule" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Submodule Name: <em class="text-danger">*</em> </label>
                                    <input type="text" class="form-control" id="txtSubmoduleName" placeholder="Submodule Name" msg-value="submodule name" required>
                                    <span id="errtxtSubmoduleName" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Controlle Name: <em class="text-danger">*</em> </label>
                                    <input type="text" class="form-control" id="txtControlleName" placeholder="Controlle Name" msg-value="controlle name" required>
                                    <span id="errtxtControlleName" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Action Name: <em class="text-danger">*</em> </label>
                                    <input type="text" class="form-control" id="txtActionName" placeholder="Action Name" msg-value="action name" required>
                                    <span id="errtxtActionName" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">                                
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Status :  <em class="text-danger">*</em> </label>
                                    <select id="ddlStatus" class="form-control" required>
                                        <option value="">Select</option>
                                        <option value="active">Active</option>
                                        <option value="inactive">Inactive</option>
                                    </select>
                                    <span id="errddlStatus" class="hidden-span text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Description :  </label>
                                    <textarea placeholder="Description" class="form-control" id="txtDescription" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="button" class="btn btn-info" id="btnSubmit">Submit</button>
                            <button type="button" class="btn btn-secondary" id="btnClear">Clear</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

