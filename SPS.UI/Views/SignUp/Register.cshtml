
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Register</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Smart PreSchool</a></li>
                        <li class="breadcrumb-item active">Register</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form method="post" enctype="multipart/form-data" asp-controller="SignUp" asp-action="Register">
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Register Here..</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-5">
                                        <input type="email" class="form-control" id="txtuserName" placeholder="Email" name="UserName" required>
                                    </div>
                                    <span id="errtxtuserName" class="err-msg"></span>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                                    <div class="col-sm-5">
                                        <input type="password" class="form-control" id="txtpassword" placeholder="Password" name="Password" required>
                                    </div>
                                    <span id="errtxtpassword" class="err-msg"></span>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Role</label>
                                    <div class="col-sm-5">
                                        <select id="ddlRole" class="form-control" required name="Role">
                                            <option value="">Select</option>
                                            <option value="Admin">Admin</option>
                                            <option value="NGO">Technician</option>
                                            <option value="User">User</option>

                                        </select>
                                    </div>
                                    <span id="errtxtpassword" class="err-msg"></span>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info" id="btnlogin"> Sign in</button>
                                <button type="submit" class="btn btn-secondary">Cancel</button>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

