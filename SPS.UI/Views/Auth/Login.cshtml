
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Login</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Smart PreSchool</a></li>
                        <li class="breadcrumb-item active">Login</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <form method="post" enctype="multipart/form-data" asp-controller="Auth" asp-action="Login">
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Login Here..</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtuserName" placeholder="Email" name="UserName" required>
                                    </div>
                                    <span id="errtxtuserName" class="err-msg"></span>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="txtpassword" placeholder="Password" name="Password" required>
                                    </div>
                                    <span id="errtxtpassword" class="err-msg"></span>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Role</label>
                                    <div class="col-sm-10">
                                        <select id="ddlRole" class="form-control" required name="Role">
                                            <option value="">Select</option>
                                            <option value="PO">Product Owner</option>
                                        </select>
                                    </div>
                                    <span id="errtxtpassword" class="err-msg"></span>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info" id="btnlogin"> Sign in</button>
                                <button type="submit" class="btn btn-secondary">Cancel</button>

                            </div>
                            <!-- /.card-footer -->
                        </div>
                    </form>
                </div>



                <!-- /.col -->
                <!-- /.col -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#timeline" data-toggle="tab">Latest News</a></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">


                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
        </div><!-- /.container-fluid -->
        <div id="divcategory">
        </div>
    </section>
    <!-- /.content -->
</div>

